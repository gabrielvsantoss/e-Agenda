@using e_Agenda.WebApp.Models
@model CadastrarContatoViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Cadastro de contatos";
}

<hr />
<div class="row justify-content-center my-5">
	<div class="col-md-8">
		<div class="card">
			<div class="card-body">

				<form action="/contatos/cadastrar" method="post">
					@Html.AntiForgeryToken()
					<h3>Formulario de Cadastro</h3>
					<div class="form-group d-grid gap-2">
						<label for="Nome" class="control-label fs-5">Nome: </label>
						<input name="Nome" class="form-control" type="text" value="@Model.Nome">
					</div>

					<div class="form-group d-grid gap-2 mt-3">
						<label for="Preco" class="control-label fs-5">Email: </label>
						<input name="Preco" class="form-control" type="text" value="@Model.Email">
					</div>

					<div class="form-group d-grid gap-2 mt-3">
						<label for="Preco" class="control-label fs-5">Telefone: </label>
						<input name="Preco" class="form-control" type="text" value="@Model.Telefone">
					</div>

					<div class="form-group d-grid gap-2 mt-3">
						<label for="Preco" class="control-label fs-5">Cargo: </label>
						<input name="Preco" class="form-control" type="text" value="@Model.Cargo">
					</div>

					
					<div class="form-group d-grid gap-2 mt-3">
						<label for="Preco" class="control-label fs-5">Empresa: </label>
						<input name="Preco" class="form-control" type="text" value="@Model.Empresa">
					</div>


					<div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
						<a href="/contatos"> Voltar</a>
						<button type="submit" class="btn btn-primary px-5"> Confirmar</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>