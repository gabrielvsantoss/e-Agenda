@model ExcluirDespesaViewModel

@{
    ViewData["Title"] = "Excluir Despesa";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3><i class="bi bi-exclamation-triangle"></i> Excluir Despesa</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Atenção!</strong> Esta ação não pode ser desfeita.
                    </div>

                    <p>Tem certeza que deseja excluir a despesa abaixo?</p>

                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <td><strong>Descrição:</strong></td>
                                <td>@Model.Descricao</td>
                            </tr>
                            <tr>
                                <td><strong>Data de Ocorrência:</strong></td>
                                <td>@Model.DataOcorrencia.ToString("dd/MM/yyyy")</td>
                            </tr>
                            <tr>
                                <td><strong>Valor:</strong></td>
                                <td>R$ @Model.Valor.ToString("F2")</td>
                            </tr>
                            <tr>
                                <td><strong>Forma de Pagamento:</strong></td>
                                <td>@Model.FormaPagamento</td>
                            </tr>
                            <tr>
                                <td><strong>Categorias:</strong></td>
                                <td>
                                    @if (Model.Categorias.Any())
                                    {
                                        @foreach (var categoria in Model.Categorias)
                                        {
                                            <span class="badge bg-secondary me-1">@categoria</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Nenhuma categoria</span>
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>

                    <form asp-action="ExcluirConfirmado" method="post">
                        <input asp-for="Id" type="hidden" />
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirmar Exclusão
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 